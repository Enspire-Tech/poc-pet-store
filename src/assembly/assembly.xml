<assembly>
    <id>car</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source> ${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>/lib</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/connector-config.xml</source>
            <outputDirectory>/META-INF</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/connector-descriptor.xml</source>
            <outputDirectory>/META-INF</outputDirectory>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>com.boomi.connsdk:connector-sdk-util</include>
                <include>org.apache.httpcomponents:httpclient</include>
                <include>org.apache.httpcomponents:httpcore</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
